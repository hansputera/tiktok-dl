{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist"]
}
